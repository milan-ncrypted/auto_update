{
  "name": "auto_update",
  "productName": "Moitele",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "install-app-deps",
    "start": "electron .",
    "build": "electron-builder build --linux --win --publish never",
    "deploy": "electron-builder build --linux --win --publish always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/milan-ncrypted/auto_update.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/milan-ncrypted/auto_update/issues"
  },
  "homepage": "https://github.com/milan-ncrypted/auto_update#readme",
  "devDependencies": {
    "electron": "^13.6.6",
    "electron-builder": "^22.4.1"
  },
  "dependencies": {
    "electron-updater": "^4.2.5"
  },
  "build": {
    "appId": "com.moitele.com",
    "artifactName": "${productName}-${version}.${ext}",
    "nsis": {
      "createStartMenuShortcut": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "shortcutName": "Moitele",
      "perMachine": false,
      "allowElevation": false,
      "deleteAppDataOnUninstall": true
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Ncrypted"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
